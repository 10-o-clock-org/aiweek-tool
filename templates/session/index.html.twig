{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sessionliste</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Beginn</th>
                <th>Ende</th>
                <th>Titel</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr class="{% if session.cancelled %}session-cancelled{% endif %}">
                <td>{{ session.start|date('Y-m-d') }}</td>
                <td>{{ session.start|date('H:i') }}</td>
                <td>{{ session.stop ? session.stop|date('H:i') : '-' }}</td>
                <td>{{ session.proposedDetails.title }}</td>
                <td class="session-actions">
                    <a class="btn btn-outline-secondary btn-sm" title="anzeigen" href="{{ path('session_show', {'id': session.id}) }}"><i class="fa fa-eye"></i></a>
                    {% if not session.cancelled %}
                    <a class="btn btn-outline-secondary btn-sm" title="bearbeiten" href="{{ path('session_edit', {'id': session.id}) }}"><i class="fa fa-pencil"></i></a>
                    {{ include('session/_cancel_form.html.twig') }}
                    {% endif %}
                    {% if is_granted('ROLE_EDITOR') %}
                    {{ include('session/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Keine Sessions gefunden.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('session_new') }}">Neue Session vorschlagen</a>
{% endblock %}
