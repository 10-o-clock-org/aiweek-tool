{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Beginn</th>
                <td>{{ session.start ? session.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ende</th>
                <td>{{ session.stop ? session.stop|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Abgesagt?</th>
                <td>{{ session.cancelled ? 'Ja' : 'Nein' }}</td>
            </tr>
        </tbody>
        <tbody>
        <tr>
            <th>Titel</th>
            <td>{{ session.proposedDetails.title }}</td>
        </tr>
        <tr>
            <th>Kurzbeschreibung</th>
            <td>{{ session.proposedDetails.shortDescription }}</td>
        </tr>
        <tr>
            <th>Langbeschreibung</th>
            <td>{{ session.proposedDetails.longDescription }}</td>
        </tr>
        <tr>
            <th>Veranstaltungsort</th>
            <td>{{ session.proposedDetails.locationName }}</td>
        </tr>
        <tr>
            <th>Link</th>
            <td><a href="{{ session.proposedDetails.link }}" target="_blank">{{ session.proposedDetails.link }}</a></td>
        </tr>
        </tbody>
    </table>

    {% if session.accepted %}
        <div class="alert alert-success" role="alert">
            Diese Session ist bereits freigegeben.
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            Diese Session wurde {% if session.acceptedDetails %}(in dieser Version){% endif %} bisher nicht freigegeben.
        </div>
    {% endif %}

    <a href="{{ path('session_index') }}">zur√ºck zur Sessionliste</a>

{% endblock %}
